<script type="text/javascript">
        $(document).ready(function () {
            $('.address').val('@Model.address');
            $('.title').val('@Model.title');
            $('.category').val('@Model.category');
            $('.city').val('@Model.city');
            $('.contact').val('@Model.contact');
            $('.email_address').val('@Model.email');
            $('.country').val('@Model.country');
            $('.name').val('@Model.name');
            $('.postal_code').val('@Model.postal_code');
            $('.subEndDate').val('@Model.subEndDate');
            $('.subStartDate').val('@Model.subStartDate');
            $('.PRemail').val('@Model.email')
            $('.vendorId').val('@Model.resId');
            $('.isRecommended').val('@Model.isRecommended');

        });


    function EditVendor() {

        var name = $('.name').val();
        var email_address = $('.email_address').val();
        var subEndDate = $('.subEndDate').val();
        var subStartDate = $('.subStartDate').val();
        var preventBind = false;
        if (name == "" || name == null) {
            $(".EditVendorForm").submit(function (e) {
                e.preventDefault();
                preventBind = true;
            });
            return toastr.error('Vendor name is required!');
        }
        if (email_address == "" || email_address == null) {
            $(".EditVendorForm").submit(function (e) {
                e.preventDefault();
                preventBind = true;
            });
            return toastr.error('Email is required!');
        }
        if (subStartDate == "" || subStartDate == null) {
            $(".EditVendorForm").submit(function (e) {
                e.preventDefault();
                preventBind = true;
            });
            return toastr.error('Sub Start Date is required!');
        }
        if (subEndDate == "" || subEndDate == null) {
            $(".EditVendorForm").submit(function (e) {
                e.preventDefault();
                preventBind = true;
            });
            return toastr.error('Sub End Date is required!');
        }
        if (preventBind == false) {
            $(".EditVendorForm").unbind('submit').submit();
        }
        return toastr.success("Vendor updated successfully.");
    }


    </script>
