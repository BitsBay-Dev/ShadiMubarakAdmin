@model ShadiMubarak.Models.Vendor
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Admin.cshtml";
    var infoTab = ViewBag.InfoTab != null && ViewBag.InfoTab ? "active show" : string.Empty;
    var productTab = ViewBag.vendorTab != null && ViewBag.vendorTab ? "active show" : string.Empty;
    var dealTab = ViewBag.dealTab != null && ViewBag.dealTab ? "active show" : string.Empty;
    var budgetaryTab = ViewBag.budgetaryTab != null && ViewBag.budgetaryTab ? "active show" : string.Empty;
    var responseTab = ViewBag.responseTab != null && ViewBag.responseTab ? "active show" : string.Empty;
